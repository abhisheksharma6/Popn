<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_identies_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tools:context="com.popn.PopActivities.IdentiesMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_idenity3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_add_new_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_idenity5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2.5">



        <LinearLayout
            android:id="@+id/linear_personal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.3"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/location"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_pink_left_fill"
                    android:text="Location"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/personal"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_pink_right_blank"
                    android:text="Personal"
                    android:gravity="center"
                    android:textColor="#ff2d55"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/plus_symbol" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/identit_person"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Broadcasts"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:src="@drawable/speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#d7d5d5">

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fragment_idenity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
