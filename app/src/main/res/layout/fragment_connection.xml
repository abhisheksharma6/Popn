<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jobs_list"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/QRCodeWhiteColor"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#F9F9F9"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp"
            android:id="@+id/search_image"
            android:src="@drawable/back_pink"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:text="Back"
            android:textColor="@color/colorTextPink"
            android:id="@+id/back_text"
            android:gravity="center"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#ffffff"
            android:id="@+id/search_job_list"
            android:padding="5dp"
            android:gravity="center"
            android:text="Connections"
            android:layout_weight="1"
            android:focusable="false"
            android:drawablePadding="2dp"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="18sp"
           />

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Done"
            android:textColor="@color/colorTextPink"
            android:id="@+id/logout_btn"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>