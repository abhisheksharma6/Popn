<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_identity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ece8e8"
            >

            <TextView
                android:id="@+id/edit_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.6"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Your Phone Number"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/done"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Done"
                android:textColor="#ff2d55"
                android:textSize="18sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:text="@string/signup_screen_enter_number"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="30dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#d7d5d5">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_identity1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"

                >
                <TextView
                    android:id="@+id/code"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="+1"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/edit_screen1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:hint="Your Phone Number"
                    android:textColorHint="#bfbcbc"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#0a0808"
                    android:textStyle="bold"
                    android:textSize="15sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#d7d5d5">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
