<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_identities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            card_view:cardPreventCornerOverlap="false"
            app:cardPreventCornerOverlap="false"
            xmlns:card_view="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_margin="5dp"
                android:id="@+id/relativeLayout"
                android:background="@drawable/cardview_background"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:padding="10dp"
                >


                <TextView
                    android:id="@+id/social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night Out"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextGray"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_marginTop="6dp"
                    android:id="@+id/profile_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/social"
                    android:src="@drawable/girl2"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:id="@+id/mattie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_below="@+id/social"
                    android:text="Scarlett Johansen"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextGray"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/edit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/colorEditText"
                    />



                <TextView
                    android:id="@+id/person_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mattie"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="32 Years Old"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextGray"
                    android:textSize="17sp"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/discountNewRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_age"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:text="Los Angeles, CA"
                    android:textColor="@color/colorTextGray"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />


                <LinearLayout
                    android:id="@+id/linearGridLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discountNewRate"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >
                    <GridView
                        android:id="@+id/grid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/os_texts"
                        android:numColumns="5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutScanner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearGridLayout11"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/qr_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qr"
                        />

                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


