                        android:numColumns="5" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linearLayoutScanner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearGridLayout3"
